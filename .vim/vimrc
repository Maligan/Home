set nocompatible

" Pathogen
call pathogen#infect()
filetype plugin indent on

" Behaviors
set title
set hidden
set noswapfile
set backspace=indent,eol,start
set mouse=a
set nowrap

" Hotkeys
let mapleader=","
nmap <silent> <leader>rc :e $MYVIMRC<CR> " Quick accsess to .vimrc file
nnoremap ; :
nmap <silent> <leader>/ :nohlsearch<CR>

" Indent
set tabstop=4
set shiftwidth=4
set softtabstop=4
set autoindent

" Statusbar
set showmode
set showcmd

" Colors
set background=dark
let g:solarized_termcolors = 256
let g:solarized_visibility = "high"
let g:solarized_contrast = "high"
colorscheme solarized

" TRASH
set incsearch
syntax on
set nowrap
set number
set numberwidth=4
